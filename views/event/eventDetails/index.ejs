            <div class="container-fluid">
                <a class="navbar-brand d-flex justify-content-between align-items-center" href="#">
                    <img id="logo" src="/images/logo2.png" alt="Logo du site" width="80" height="80" class="d-inline align-top mx-5">
                    <!-- <h1 class="f">Al Moutmir</h1> -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/actualite">Actualité</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/events">Evenement</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/a-propos">A Propos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                    </ul>
                    <div class="d-flex flex-column flex-lg-row align-items-start" id="cnx-theme">
                        <!-- <button type="button" class="btn btn-warning py-2 me-2 mb-2 mb-lg-0" id="navigateButton">Déconnexion</button>-->
                        <% if (user) { %>
                          <button type="button" class="btn btn-warning py-2 me-2 mb-2 mb-lg-0" id="logoutButton">Déconnexion</button>
                      <% } else { %>
                          <button type="button" class="btn btn-warning py-2 me-2 mb-2 mb-lg-0" id="loginButton">Connéxion</button>
                      <% } %>
                    </div>
                </div>
            </div>
        </nav>
        
    <!--------------------------------------FIN NAVBAR-------------------------------------------------------------------------------------------------------->
    <!--------------------------------------CAROUSSEL-------------------------------------------------------------------------------------------------------->
  <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active" style="height: 100vh;">
        <div class="bd-placeholder-img" id="bg-1"></div>
        <div class="container">
        </div>
      </div>
      <div class="carousel-item" style="height: 100vh;">
        <div class="bd-placeholder-img" id="bg-2"></div>
        <div class="container">
        </div>
      </div>
      <div class="carousel-item" style="height: 100vh;">
        <div class="bd-placeholder-img" id="bg-3"></div>
        <div class="container">
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
    <div class="carousel-caption text-start" style="margin-bottom: 150px;">
        <h1 class="text-white">Bienvenue Dans <%= event.titre %></h1>
      </div>
  </div>
    <!--------------------------------------FIN CAROUSSEL-------------------------------------------------------------------------------------------------------->
    <div class="container mt-5">
        <!-- Détails de l'événement -->
        <div class="event-details">
            <h1><%= event.titre %></h1>
            <p><%= event.description %></p>
            <p><strong>Date :</strong> <%= event.date %></p>
            <p><strong>Lieu :</strong> <%= event.lieu %></p>
            <% if (event.imageUrl) { %>
                <img src="/images/<%= event.imageUrl %>" alt="<%= event.titre %>" class="img-fluid">
            <% } %>
        </div>

        <!-- Détails des sponsors -->
      <!-- Sponsors -->
<!-- Sponsors -->
<% if (event.sponsors && Array.isArray(event.sponsors) && event.sponsors.length > 0) { %>
    <div class="sponsors mt-5">
        <h2>Sponsors</h2>
        <ul class="list-unstyled">
            <% event.sponsors.forEach(function(sponsor) { %>
                <li class="mb-3">
                    <h3><%= sponsor.nom %></h3>
                    <p><%= sponsor.description %></p>
                </li>
            <% }) %>
        </ul>
    </div>
<% } else { %>
    <p>Aucun sponsor n'a été trouvé pour cet événement.</p>
<% } %>



        <!-- Détails des intervenants (speakers) -->
        <% if (event.speakers && event.speakers.length > 0) { %>
            <div class="speakers mt-5">
                <h2>Intervenants</h2>
                <div class="row">
                    <% event.speakers.forEach(function(speaker) { %>
                        <div class="col-md-4">
                            <% if (speaker.imageUrl) { %>
                                <img src="/images/<%= speaker.imageUrl %>" alt="<%= speaker.nom %> <%= speaker.prenom %>" class="img-fluid mb-3">
                            <% } %>
                            <h3><%= speaker.nom %> <%= speaker.prenom %></h3>
                            <p><%= speaker.description %></p>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } else { %>
            <p>Aucun speaker n'a été trouvé pour cet événement.</p>
        <% } %>
        <!-- Programme de l'événement -->
        <% if (event.programme && event.programme.length > 0) { %>
            <div class="programme mt-5">
                <h2>Programme</h2>
                <ul>
                    <% event.programme.forEach(function(item) { %>
                        <li>
                            <strong><%= item.jour %> :</strong> <%= item.description %>
                        </li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
    </div>  
</div>
<!-- LA PARTIE FOOTER  -->

