<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Détails de l'Événement</title>
    <link rel="stylesheet" href="/path/to/your/styles.css">
</head>
<body>
    <h1><%= event.titre %></h1>
    <p><%= event.description %></p>
    <p>Date de début : <%= event.date_debut %></p>
    <p>Date de fin : <%= event.date_fin %></p>
    <p>Lieu : <%= event.lieu %></p>

    <h2>Sponsors</h2>
    <ul>
        <% sponsors.forEach(sponsor => { %>
            <li><strong><%= sponsor.nom %></strong>: <%= sponsor.description %></li>
        <% }) %>
    </ul>

    <h2>Speakers</h2>
    <ul>
        <% speakers.forEach(speaker => { %>
            <li>
                <strong><%= speaker.nom %> <%= speaker.prenom %></strong>: <%= speaker.description %>
                <% if (speaker.image_url) { %>
                    <img src="<%= speaker.image_url %>" alt="<%= speaker.nom %> <%= speaker.prenom %>" />
                <% } %>
            </li>
        <% }) %>
    </ul>

    <h2>Programme</h2>
    <ul>
        <% programmes.forEach(programme => { %>
            <li><strong>Date:</strong> <%= programme.titre %> - <%= programme.description %></li>
        <% }) %>
    </ul>

    <div class="d-flex flex-column flex-lg-row align-items-start" id="cnx-theme">
        <% if (user) { %>
            <button type="button" class="btn btn-warning py-2 me-2 mb-2 mb-lg-0" id="logoutButton">Déconnexion</button>
        <% } else { %>
            <button type="button" class="btn btn-warning py-2 me-2 mb-2 mb-lg-0" id="loginButton">Connexion</button>
        <% } %>
    </div>
</body>
</html>
